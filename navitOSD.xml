<!-- osd items allow to position display and control items directly on
     top of the map: -->

<osd enabled="yes" x="200" y="0" type="compass"/>
<osd enabled="yes" x="200" y="200" type="eta"/>
<osd enabled="yes" x="150" y="150"
     type="navigation_distance_to_target"/>
<osd enabled="yes" x="50" y="50" type="navigation"/>
<osd enabled="yes" x="100" y="100"
     type="navigation_distance_to_next"/>
<osd enabled="yes" type="navigation_next_turn"/>

<!-- Commands include gui_internal_menu, gui_internal_fullscreen,
     zoom_in and zoom_out.  Usage of negative values change the button
     origins. x="0" y="0" specifies the top left, x="-0" y="-0" the
     bottom right corner.  It's always the top left corner of the
     icon, so you need to consider the icon's size when you enter the
     values. -->

<osd enabled="no" type="button" x="0" y="0" command="gui.fullscreen()"
     src="toggle_fullscreen.xpm"/> 
<osd enabled="no" type="button" x="-96" y="0" command="gui.menu()"
     src="menu.xpm"/>
<osd enabled="yes" type="button" x="-96" y="-96" command="zoom_in()"
     src="zoom_in.xpm"/>
<osd enabled="yes" type="button" x="-96" y="0" command="zoom_out()"
     src="zoom_out.xpm"/>
